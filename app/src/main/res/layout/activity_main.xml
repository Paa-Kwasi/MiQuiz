                    <RadioGroup
                        android:id="@+id/rG_qtn_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/qtn8_rbtn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_8_ans_A" />

                        <RadioButton
                            android:id="@+id/qtn8_rbtn_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
