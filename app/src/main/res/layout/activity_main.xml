                        <RadioButton
                            android:id="@+id/qtn3_rbtn_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_3_ans_C" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="@string/qtn_4" />

                    <RadioGroup
                        android:id="@+id/rG_qtn_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
