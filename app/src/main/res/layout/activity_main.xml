                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/qtn2_rbtn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_2_ans_A" />

                        <RadioButton
                            android:id="@+id/qtn2_rbtn_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
