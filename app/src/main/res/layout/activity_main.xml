                        <RadioButton
                            android:id="@+id/qtn9_rbtn_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_9_ans_C" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:text="@string/qtn_10" />

                    <RadioGroup
                        android:id="@+id/rG_qtn_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/qtn10_rbtn_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_10_ans_A" />

                        <RadioButton
                            android:id="@+id/qtn10_rbtn_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_10_ans_B" />

                        <RadioButton
                            android:id="@+id/qtn10_rbtn_3"
