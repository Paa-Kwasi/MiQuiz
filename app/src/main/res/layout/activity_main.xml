                            android:text="@string/qtn_5_ans_A" />

                        <RadioButton
                            android:id="@+id/qtn5_rbtn_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_5_ans_B" />

                        <RadioButton
                            android:id="@+id/qtn5_rbtn_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qtn_5_ans_C" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
